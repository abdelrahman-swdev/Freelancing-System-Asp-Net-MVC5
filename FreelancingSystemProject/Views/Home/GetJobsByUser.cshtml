@model IEnumerable<FreelancingSystemProject.Models.SendProposal>

@{
    ViewBag.Title = "GetJobsByUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-secondary">
    <h3>
        You Applied to this jobs.
    </h3>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProposalDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Post.JobDescription)
        </th>
        <th>
            Status
        </th>

        <th></th>
    </tr>

@foreach (var item in Model)
{
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Message)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProposalDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Post.JobDescription)
    </td>
    @{
        if (item.Post.HasProposalAccepted)
        {
            <td>
                Congrats, your proposal has accepted by the client
            </td>
        }
        else
        {
            <td>
                Pending
            </td>
        }
    }

</tr>
}

</table>
