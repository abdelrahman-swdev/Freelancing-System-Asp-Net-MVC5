<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Jobat</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (User.IsInRole("Client"))
    {

        @Html.Partial("_FactoryLayout")
    }
    else if (User.IsInRole("Freelancer"))
    {
        @Html.Partial("_WallLayout")
    }

    else if (User.IsInRole("Admin"))
    {

        @Html.Partial("_DashboardLayout")
    }
    else
    {

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">Jobat</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item">
                        <a href="/Home/Index" class="nav-link">
                            Home <i class="bi bi-house-fill"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Home/About" class="nav-link">
                            About <i class="bi bi-info-circle-fill"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Home/Contact" class="nav-link">
                            Contact <i class="bi bi-envelope-fill"></i>
                        </a>
                    </li>

                </ul>
                @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "form-inline my-2 my-lg-0" }))
                {
                    <input class="form-control mr-sm-2" type="search" name="searchName" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
                }
                @Html.Partial("_LoginPartial")

            </div>
        </div>
        </nav>
    }
    

    
    




    <div class="container">


        @RenderBody()
        <hr />


        <footer>
            <p>&copy; @DateTime.Now.Year - Jobat</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
