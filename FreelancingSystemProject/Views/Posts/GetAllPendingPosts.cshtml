@model IEnumerable<FreelancingSystemProject.Models.Posts>

@{
    ViewBag.Title = "GetAllPendingPosts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-secondary">
    <h3>
        Posts Request
    </h3>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobType.Type)
        </th>
        <th>
            User Email
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobBudget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobDescription)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobType.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobBudget)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobDescription)
        </td>
        
        <td>
            @Html.ActionLink("Accept", "AcceptPost", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
